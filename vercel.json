{
  "version": 2,
  "public": true,
  "rewrites": [
    { "source": "/api/compress", "destination": "/api/compress.js" }
  ],
  "builds": [
    {
      "src": "api/compress.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["public/error.png"]
      }
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    },
    {
      "src": "public/index.html",
      "use": "@vercel/static",
      "config": { "rewrites": [{ "source": "/(.*)", "destination": "/index.html" }] }
    }
  ]
}
