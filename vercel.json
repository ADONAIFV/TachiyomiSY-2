{
  "version": 2,
  "builds": [
    {
      "src": "api/compress.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["public/error.png"]
      }
    },
    {
      "src": "public/index.html",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    { 
      "source": "/api/compress", 
      "destination": "/api/compress.js" 
    },
    { 
      "source": "/(.*)", 
      "destination": "/public/$1" 
    }
  ]
}
