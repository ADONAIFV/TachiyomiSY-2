{
  "version": 2,
  "builds": [
    {
      "src": "api/compress.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["public/error.png"]
      }
    }
  ],
  "routes": [
    // 1. Ruta para la API
    {
      "src": "/api/compress",
      "dest": "/api/compress.js"
    },
    // 2. Ruta para la página estática principal
    {
      "src": "/",
      "dest": "/public/index.html"
    }
  ]
}
